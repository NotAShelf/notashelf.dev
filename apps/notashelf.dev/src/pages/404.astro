---
import BaseLayout from "@layouts/BaseLayout.astro";
import { Icon } from "astro-icon/components";
---

<BaseLayout
  title="Page Not Found"
  description="The page you're looking for doesn't exist or has been moved."
>
  <div class="error-container">
    <div class="error-content">
      <h1 class="error-code">404</h1>
      <div class="error-divider"></div>
      <h2 class="error-title">Page Not Found</h2>
      <p class="error-message">
        The page you're looking for doesn't exist or has been moved.
      </p>

      <div class="error-actions">
        <a href="/" class="action-button primary">
          <Icon name="home" class="icon" title="Home" />
          <span>Home</span>
        </a>
        <a href="/posts" class="action-button">
          <Icon name="search" class="icon" title="Blog Posts" />
          <span>Blog Posts</span>
        </a>
        <button id="go-back-button" class="action-button">
          <Icon name="arrow-left" class="icon" title="Go Back" />
          <span>Go Back</span>
        </button>
      </div>
    </div>
  </div>
</BaseLayout>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const goBackButton = document.getElementById("go-back-button");
    if (goBackButton) {
      goBackButton.addEventListener("click", () => {
        // Verify history object and back method exist
        if (window.history && typeof window.history.back === "function") {
          try {
            window.history.back();
          } catch (error) {
            console.error("Failed to navigate back:", error);
            // Fallback: redirect to home page
            window.location.href = "/";
          }
        } else {
          console.warn("History API not available, redirecting to home page");
          window.location.href = "/";
        }
      });
    }
  });
</script>

<style lang="scss">
  @use "../styles/global" as *;
  @use "sass:color";

  .error-container {
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: calc(100vh - 200px);
    padding: 2rem;
  }

  .error-content {
    text-align: center;
    max-width: 500px;
  }

  .error-code {
    font-size: 8rem;
    font-weight: 800;
    line-height: 1;
    margin: 0;
    background: linear-gradient(135deg, $text-muted, $text-subtle);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    color: transparent;
    margin-bottom: 1rem;
  }

  .error-divider {
    width: 80px;
    height: 3px;
    background: $border-light;
    margin: 1.5rem auto;
    border-radius: 3px;
  }

  .error-title {
    font-size: 2rem;
    margin: 0 0 1.5rem;
    color: $secondary;
  }

  .error-message {
    color: $text-muted;
    margin-bottom: 2.5rem;
    font-size: 1.1rem;
    line-height: 1.6;
  }

  .error-actions {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 1rem;
  }

  .action-button {
    @include rounded-border(6px);
    @include smooth-transition;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.8rem 1.2rem;
    background-color: $button-bg;
    color: $text-muted;
    text-decoration: none;
    border: none;
    font-size: 0.95rem;
    font-family: inherit;
    cursor: pointer;

    &:hover {
      background-color: $button-bg-hover;
      transform: translateY(-2px);
    }

    &.primary {
      background-color: color.scale($primary, $lightness: 15%);

      &:hover {
        background-color: color.scale($primary, $lightness: 20%);
      }
    }

    :global(svg) {
      width: 1rem;
      height: 1rem;
    }
  }

  @media (max-width: 500px) {
    .error-code {
      font-size: 6rem;
    }

    .error-title {
      font-size: 1.7rem;
    }

    .error-actions {
      flex-direction: column;
    }

    .action-button {
      width: 100%;
      justify-content: center;
    }
  }
</style>
