{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist/",
    "declaration": true,
    "composite": true,
    "noEmit": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "verbatimModuleSyntax": true,
    "plugins": [
      {
        "name": "@astrojs/ts-plugin"
      }
    ],
    "paths": {
      "@/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@layouts/*": ["src/layouts/*"],
      "@styles/*": ["src/styles/*"],
      "@lib/*": ["src/lib/*"],
      "@data/*": ["src/data/*"],
      "@scripts/*": ["src/scripts/*"],
      "wasm-utils": ["../../packages/wasm-utils/pkg"],
      "wasm-utils/*": ["../../packages/wasm-utils/pkg/*"]
    }
  },
  "include": [
    ".astro/types.d.ts",
    "src/**/*.d.ts",
    "src/**/*.svelte"
  ],
  "exclude": [
    "dist",
    "result",
    "node_modules",
    "posts"
  ],
  "mdx": {
    "checkMdx": true
  }
}
