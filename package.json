{
  "private": true,
  "workspaces": [
    "apps/notashelf.dev",
    "packages/*",
    "packages/wasm-utils/pkg"
  ],
  "scripts": {
    "build": "node scripts/build.js",
    "build:basic": "pnpm run build:wasm-utils && pnpm run build:web",
    "build:web": "pnpm --filter ./apps/notashelf.dev run build",
    "build:wasm-utils": "cd packages/wasm-utils && wasm-pack build --target web --out-dir pkg --out-name wasm-utils",
    "dev": "node scripts/dev.js",
    "dev:basic": "pnpm run build:wasm-utils && pnpm --filter ./apps/notashelf.dev run dev",
    "preview": "pnpm --filter ./apps/notashelf.dev run preview",
    "check": "pnpm --filter ./apps/notashelf.dev run check",
    "fmt": "prettier . --write",
    "lint": "eslint **/*.{ts,js,astro}",
    "test": "vitest",
    "test:run": "vitest run --config ./vitest.config.ts",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:web": "vitest run --project notashelf.dev",
    "test:ci": "vitest run --coverage",
    "test:mutants": "stryker run"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@stryker-mutator/core": "^9.0.1",
    "@stryker-mutator/typescript-checker": "^9.0.1",
    "@stryker-mutator/vitest-runner": "^9.0.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@types/eslint": "^9.6.1",
    "@types/postcss-normalize": "^9.0.4",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@types/unist": "^3.0.3",
    "@typescript-eslint/eslint-plugin": "^8.35.0",
    "@typescript-eslint/parser": "^8.35.0",
    "@typescript-eslint/utils": "^8.35.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.29.0",
    "eslint-plugin-astro": "^1.3.1",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "fs-extra": "^11.3.0",
    "globals": "^16.2.0",
    "jiti": "^2.4.2",
    "jsdom": "^26.1.0",
    "prettier": "3.6.2",
    "prettier-plugin-astro": "0.14.1",
    "prettier-plugin-astro-organize-imports": "^0.4.11",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.35.0",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "cssnano": "^7.0.7",
    "glob": "^11.0.3",
    "postcss": "^8.5.6",
    "purgecss": "^7.0.2"
  }
}
