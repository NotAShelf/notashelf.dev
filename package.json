{
  "private": true,
  "workspaces": [
    "apps/notashelf.dev",
    "packages/wasm-utils/pkg"
  ],
  "scripts": {
    "build": "pnpm run build:wasm-utils && pnpm run build:web",
    "build:web": "pnpm --filter ./apps/notashelf.dev run build",
    "build:wasm-utils": "cd packages/wasm-utils && wasm-pack build --target web --out-dir pkg --out-name wasm-utils",
    "dev": "pnpm run build:wasm-utils && pnpm --filter ./apps/notashelf.dev run dev",
    "preview": "pnpm --filter ./apps/notashelf.dev run preview",
    "check": "pnpm --filter ./apps/notashelf.dev run check",
    "fmt": "pnpm --filter ./apps/notashelf.dev run fmt",
    "lint": "pnpm --filter ./apps/notashelf.dev run lint"
  },
  "devDependencies": {
    "@eslint/js": "^9.27.0",
    "@types/eslint": "^9.6.1",
    "@types/react": "^19.1.5",
    "@types/react-dom": "^19.1.5",
    "@types/unist": "^3.0.3",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "@typescript-eslint/utils": "^8.32.1",
    "eslint": "^9.27.0",
    "eslint-plugin-astro": "^1.3.1",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "fs-extra": "^11.3.0",
    "globals": "^16.2.0",
    "jiti": "^2.4.2",
    "prettier": "3.5.3"
  }
}
