    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 1.5rem;
    margin-top: 1.5rem;
  }

  .affiliation-card {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1.2rem;
    background: rgba(255, 255, 255, 0.04);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 8px;
    transition: all 0.2s ease;

    &:hover {
      transform: translateY(-3px);
      background: rgba(255, 255, 255, 0.08);
      border-color: rgba(255, 255, 255, 0.12);
      box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
    }
  }

  .affiliation-logo {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 50px;
    height: 50px;
    flex-shrink: 0;
    color: scale-color($primary, $lightness: 15%);
    background: rgba(255, 255, 255, 0.05);
    border-radius: 6px;
    padding: 8px;
    box-sizing: border-box;
    overflow: hidden;

    :global(img) {
      max-width: 100%;
      max-height: 100%;
      width: auto;
      height: auto;
      object-fit: contain;
    }

    svg {
      width: 30px;
      height: 30px;
    }
  }

  .affiliation-content {
    h3 {
      font-size: 1.1rem;
      margin: 0 0 0.5rem;
