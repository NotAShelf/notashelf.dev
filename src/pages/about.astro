    gap: 2rem;
  }

  .skill-category {
    h3 {
      font-size: 1.1rem;
      margin-bottom: 1rem;
      color: scale-color($primary, $lightness: 15%);
    }
  }

  .skill-list {
    list-style-type: none;
    padding: 0;
    margin: 0;

