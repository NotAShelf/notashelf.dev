    // Variants
    &.admonition-note {
      border-left: 4px solid #3498db;

      .admonition-title {
        background-color: rgba(52, 152, 219, 0.1);
        color: #3498db;
      }

      .admonition-icon {
        color: #3498db;
      }
    }

    &.admonition-tip {
      border-left: 4px solid #2ecc71;

      .admonition-title {
        background-color: rgba(46, 204, 113, 0.1);
        color: #2ecc71;
      }

      .admonition-icon {
        color: #2ecc71;
      }
    }

    &.admonition-important {
      border-left: 4px solid #9b59b6;

      .admonition-title {
        background-color: rgba(155, 89, 182, 0.1);
        color: #9b59b6;
      }

      .admonition-icon {
        color: #9b59b6;
      }
    }

    &.admonition-warning,
    &.admonition-caution {
      border-left: 4px solid #f39c12;

      .admonition-title {
        background-color: rgba(243, 156, 18, 0.1);
        color: #f39c12;
      }

      .admonition-icon {
        color: #f39c12;
      }
    }

    &.admonition-danger {
      border-left: 4px solid #e74c3c;

      .admonition-title {
        background-color: rgba(231, 76, 60, 0.1);
        color: #e74c3c;
      }

      .admonition-icon {
        color: #e74c3c;
      }
    }

    // Importance levels
    &[data-level="2"] {
      .admonition-title {
        font-weight: 700;
      }
    }

    &[data-level="3"] {
      .admonition-title {
        font-weight: 800;
        text-transform: uppercase;
        letter-spacing: 0.5px;
      }
    }
  }

  // Make headings linkable
  .post-content {
    h2,
    h3,
    h4,
    h5,
    h6 {
      position: relative;
      scroll-margin-top: 80px;

      &:hover::after {
        content: "#";
        position: absolute;
        left: -1.2rem;
        top: 50%;
        transform: translateY(-50%);
        opacity: 0.4;
        font-weight: normal;
        font-size: 0.9em;
      }

      a {
        color: inherit;
        text-decoration: none;
      }
    }
  }

  // Enhanced footnotes
  .footnotes {
    margin-top: 3rem;
    padding-top: 1rem;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    font-size: 0.9rem;
    color: rgba(255, 255, 255, 0.8);

    hr {
      display: none; // Hide the default horizontal rule
    }

    ol {
      padding-left: 1.5rem;
      margin-top: 1.5rem; // Space after the heading
    }

    li {
      margin-bottom: 0.5rem;
