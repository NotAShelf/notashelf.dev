  a.footnote-ref {
    text-decoration: none;
    position: relative;
    font-size: 0.8em;
    vertical-align: super;
    margin: 0 2px;
    color: rgba(255, 255, 255, 0.8);
    background-color: rgba(255, 255, 255, 0.1);
    padding: 0 5px;
    border-radius: 3px;
    transition: all 0.2s ease;

